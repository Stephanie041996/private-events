<h1> Created Events </h1>
<table>
<thead>
<tr>
<th>Date</th>
<th>Title</th>
<th>Location</th>
<th colspan="3"></th>
</tr>
</thead>

<tbody>
<% @created_events.each do |event| %>
<tr>
<td><%= event.date %></td>
<td><%= event.title %></td>
<td><%= event.location %></td>
<td><%= link_to 'Show', event %></td>
<td><%= link_to 'Edit', edit_event_path(event) %></td>
<td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
<% end %>
</tbody>
</table> 

